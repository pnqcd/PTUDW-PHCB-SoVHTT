{{>sidebar curPage="Thống kê"}}
<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    {{>navbar curPage="Thống kê"}}

    <div class="container-fluid py-4">
        <div class="card-body mb-4">
            <div class="row">
                <div class="col-lg-2">
                    <button class="btn bg-gradient-secondary w-100 mb-0 toast-btn" type="button" style="cursor:default">
                        TP Hồ Chí Minh
                    </button>
                </div>
                <div class="col-lg-2">
                    <div class="dropdown">
                        <button
                            class="btn btn-secondary bg-gradient-info dropdown-toggle w-100 mb-0"
                            type="button"
                            id="quanButton"
                            data-bs-toggle="dropdown"
                            aria-haspopup="true"
                            aria-expanded="false"
                        >
                            Quận
                        </button>
                        <div class="dropdown-menu" aria-labelledby="quanButton">
                            {{#each districts}}
                                <button class="dropdown-item" onclick="wardListByDistrict(this)">{{districtName}}</button>
                            {{/each}}
                        </div>
                    </div>
                </div>
