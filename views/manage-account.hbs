                            <label for="districtNameEdit" class="form-label">Quận</label>
                            <input type="text" id="districtNameEdit" name="districtName" class="form-control" placeholder="Quận 5" required />
                        </div>
                    </div>
                    <div class="row g-2">
                        <div class="col mb-3">
                            <label for="zipCodeEdit" class="form-label">Mã vùng</label>
                            <input type="text" id="zipCodeEdit" name="zipCode" class="form-control" placeholder="72000"/>
                        </div>
                        <div class="col mb-3">
                            <label for="populationEdit" class="form-label">Dân số</label>
                            <input type="text" id="populationEdit" name="population" class="form-control" placeholder="12345" />
                        </div>
                    </div>
