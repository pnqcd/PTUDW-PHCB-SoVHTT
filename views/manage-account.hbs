                            <div class="col mb-0">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="isAdmin" name="isAdmin" value="1" />
                                <label class="form-check-label badge bg-label-primary" for="isAdmin">Is Admin</label>
                            </div>
                            </div>
                        </div> --}}
                        <div class="text-center badge bg-label-danger" id="errorMessage"></div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" id="closeBtn">
                            Đóng
                        </button>
                        <button type="submit" class="btn btn-primary">
                            Lưu
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Edit Ward Modal -->
    <div class="modal fade" id="editWardModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <form action="" id="editWardForm" onsubmit="editWard(event)">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">
                        Chỉnh sửa thông tin phường
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                <div class="modal-body">
                    <div class="row g-2">
                        <div class="col mb-3">
                            <label for="wardNameEdit" class="form-label">Phường</label>
                            <input type="text" id="wardNameEdit" name="wardName" class="form-control" placeholder="Phường 1"
                            required />
                        </div>
