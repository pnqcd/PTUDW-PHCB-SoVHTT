    <!-- Add Ward Modal -->
    <div class="modal fade" id="addWardModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <form action="/danh-sach/wards" id="addWardForm" method="POST">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="wardModalTitle">
                            Thêm Phường
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row g-2">
                            <div class="col mb-3">
                            <label for="wardName" class="form-label">Phường</label>
                            <input type="text" id="wardName" name="wardName" class="form-control" placeholder="Phường 1"
                                required data-autofocus />
                            </div>
                            <div class="col mb-3">
                            <label for="districtName" class="form-label">Quận</label>
                            <input type="text" id="districtName" name="districtName" class="form-control" placeholder="Quận 5"
                                required />
                            </div>
                        </div>
                        <div class="row g-2">
                            <div class="col mb-3">
                            <label for="zipCode" class="form-label">Mã vùng</label>
                            <input type="text" id="zipCode" name="zipCode" class="form-control" placeholder="72000"
                                required />
                            </div>
                            <div class="col mb-3">
                            <label for="population" class="form-label">Dân số</label>
                            <input type="text" id="population" name="population" class="form-control" placeholder="12345" />
                            </div>
                        </div>
